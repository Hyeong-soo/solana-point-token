rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user is a participant in a chat/settlement
    function isParticipant(resourceData) {
      return request.auth.uid in resourceData.participants;
    }

    // Users:
    // - Read: Public (needed for searching friends by wallet address)
    // - Write: Only the user themselves
    match /users/{userId} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;

      // Cards subcollection
      match /cards/{cardId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Transactions:
    // - Create: Authenticated users (for Buy history)
    // - Read: Authenticated users
    match /transactions/{transactionId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
    }

    // Admin Stats:
    // - Read: Authenticated users
    // - Write: Authenticated users (needed for Buy.jsx to update balances)
    match /admin_stats/{docId} {
      allow read, write: if isAuthenticated();
    }

    // Requests:
    // - Create: Authenticated users
    // - Read: Sender or Receiver
    // - Update: Sender or Receiver (for status updates)
    match /requests/{requestId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.fromUid || 
        request.auth.uid == resource.data.toUid
      );
      allow update: if isAuthenticated();
    }

    // Chats:
    // - Read/Write: Only participants
    match /chats/{chatId} {
      allow read: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      allow create: if isAuthenticated(); // Anyone can create, but should include themselves
      allow update: if isAuthenticated() && (request.auth.uid in resource.data.participants);
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if isAuthenticated() && 
          (request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants);
      }
    }

    // Settlements:
    // - Read/Write: Only participants
    match /settlements/{settlementId} {
      allow create: if isAuthenticated() && (request.auth.uid in request.resource.data.participantUids);
      allow read, update, delete: if isAuthenticated() && (request.auth.uid in resource.data.participantUids);
    }

    // Student Lookup:
    // - Read: Authenticated users (to find friends)
    // - Write: Authenticated users (during registration)
    match /student_lookup/{studentId} {
      allow read, write: if isAuthenticated();
    }
  }
}
